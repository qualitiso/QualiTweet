{
    "background": {
        "persistent": false,
        "scripts": ["scripts/background.js"]
    },
    "content_scripts": [{
        "css": ["stylesheets/page.css"],
        "js": ["scripts/jquery.js", "scripts/filters.js"],
        "matches": ["http://twitter.com/*", "https://twitter.com/*"]
    }],
    "default_locale": "en",
    "description": "__MSG_description__",
    "homepage_url": "http://www.qualitiso.com",
    "icons": {
        "128": "images/icon128.png",
        "16": "images/icon16.png",
        "48": "images/icon48.png"
    },
    "manifest_version": 2,
    "minimum_chrome_version": "22",
    "name": "__MSG_title__",
    "permissions": ["tabs", "contextMenus", "http://twitter.com/*", "https://twitter.com/*"],
    "short_name": "QualiTwitter",
    "update_url": "https://clients2.google.com/service/update2/crx",
    "version": "0.0.3"
}
